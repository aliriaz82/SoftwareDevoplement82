import random

# Generate a random number between 1 and 50
secret_number = random.randint(1, 50)

# Maximum number of attempts
max_attempts = 5

# Counter to track attempts
attempts = 0

print("ğŸ® Welcome to Guess the Number!")
print("Guess a number between 1 and 50")
print(f"You have {max_attempts} attempts.\n")

# WHILE LOOP
# This loop continues until attempts run out
while attempts < max_attempts:
    guess = input("Enter your guess: ")

    # Validate input
    if not guess.isdigit():
        print("âš ï¸ Please enter a valid number.")
        continue

    guess = int(guess)
    attempts += 1

    # CONDITIONAL STATEMENTS
    if guess < secret_number:
        print("Too low!")
    elif guess > secret_number:
        print("Too high!")
    else:
        print(f"ğŸ‰ Congratulations! You guessed the number in {attempts} attempts.")
        break

# Loop finishes when attempts reach maximum
if attempts == max_attempts and guess != secret_number:
    print("\nâŒ You've used all attempts.")
    print(f"The correct number was: {secret_number}")

